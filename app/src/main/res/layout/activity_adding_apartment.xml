<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddingApartmentActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/homeMatch_LBL_step1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Property Details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/homeMatch_LL_property_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeMatch_LBL_step1_title"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:checkedButton="@id/homeMatch_BTN_for_sale"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/homeMatch_BTN_for_sale"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="For Sale"
                    android:textColor="@drawable/text_color_selector"
                    app:backgroundTint="@drawable/button_selector" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/homeMatch_BTN_for_rent"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="For Rent"
                    android:textColor="@drawable/text_color_selector"
                    app:backgroundTint="@drawable/button_selector" />
            </com.google.android.material.button.MaterialButtonToggleGroup>



            <!-- City -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/homatch_INP_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Street -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:layout_marginTop="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/homatch_INP_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Street Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:hint="Street Number"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/homeMatch_INP_street_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Postal Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Postal Code">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/homatch_INP_postal_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tv_apartment_type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apartment Type:"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/homeMatch_SPN_apartment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:prompt="@string/select_apartment_type"
                android:entries="@array/apartment_types"
                android:outlineProvider="bounds"
                android:elevation="@dimen/cardview_default_elevation"/>

        <!-- Floor Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_floor_number"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Floor Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/homatch_INP_floor_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_floor_apartment_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- Number of Rooms -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_number_of_rooms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Number of Rooms">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/homatch_INP_number_of_rooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>



                <!-- Apartment Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_house_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:hint="House Number">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/homatch_INP_house_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Price"
                    android:paddingEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NIS"
                    android:gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <androidx.appcompat.widget.LinearLayoutCompat
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/homeMatch_CHKBOX_garage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garage" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/homeMatch_CHKBOX_balcony"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balcony" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/homeMatch_CHKBOX_can_smoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Can Smoke" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/homeMatch_CHKBOX_pets_allowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pets Allowed" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/homeMatch_CHKBOX_elevator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parking" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">


                <androidx.appcompat.widget.AppCompatImageView
                    id="@+id/homeMatch_BTN_add_image1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_image"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homeMatch_BTN_add_image2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_image"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homeMatch_BTN_add_image3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_image"/>

                <androidx.appcompat.widget.AppCompatImageView
                    id="@+id/homeMatch_BTN_add_image4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_image"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homeMatch_BTN_add_image5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_add_image"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeMatch_BTN_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeMatch_LL_property_details"
            android:layout_marginTop="16dp"
            android:text="Finish"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            app:iconPadding="8dp"
            app:backgroundTint="@color/burnt_orange"
            android:padding="12dp"
            android:layout_gravity="center"/>



    </RelativeLayout>
</ScrollView>
