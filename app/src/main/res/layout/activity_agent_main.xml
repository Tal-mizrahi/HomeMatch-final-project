<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AgentMainActivity">

  <FrameLayout
      android:id="@+id/homeMatch_LAY_agent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/homeMatch_BNV_agent"
      android:background="@color/container_color" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/homeMatch_BNV_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="0dp"
        app:menu="@menu/agent_bottom_nav_menu"
        app:itemRippleColor="@color/light_orange2"
        app:itemActiveIndicatorStyle="@color/light_orange2"
        app:itemBackground="@drawable/nav_bar_background_selector"
        app:itemIconTint="@drawable/bottom_nav_color_selector"
        app:itemTextColor="@drawable/bottom_nav_color_selector"
        android:background="@color/white"/>



</RelativeLayout>